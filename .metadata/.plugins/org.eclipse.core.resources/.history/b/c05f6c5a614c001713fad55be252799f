package org.altar.training.ex6;

public class WordCapitalizer {
	public static void main(String[] args) {
		System.out.println(wordCapitalizer("Welcome to the jungle"));
	}
	
	private static String wordCapitalizer(String input){
		String output = Character.toUpperCase(input.charAt(0)) + input.substring(1);
		return output;
	}
}

